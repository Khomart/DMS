@section Scripts {
<script type="text/javascript">
    {
        $(document).ready(function () {

            var serviceURL = '/Admin/StudentApproval';
            $(".approve").click(function (e) {
                e.preventDefault();
                button = $(this);

                id = $(this).attr("id");
                url = '/Admin/StudentApproval';
                $.ajax({
                    type: "POST",
                    url: url,
                    data: { 'ID': id },
                    //contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: successFunc,
                    error: errorFunc
                });
                function successFunc() {
                    button.toggleClass('disabled', true);
                    button.addClass('clicked');
                    button.text("Approved")
                }

                function errorFunc() {
                    alert('An error appeared. Try to refresh page, if it doesn\'t help contact the administrator');
                }

            })
        });


        var jumboHeight = $('.jumbotron').outerHeight();
        function parallax() {
            var scrolled = $(window).scrollTop();
            $('.bgAdmin').css('height', (jumboHeight - scrolled) + 'px');
        }

        $(window).scroll(function (e) {
            parallax();
        });
    }
    </script>
