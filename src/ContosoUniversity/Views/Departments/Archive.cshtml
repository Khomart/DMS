@model ContosoUniversity.Models.Entities.Department

@{
    ViewData["Title"] = "Archive Department";
}

<h2>Archive</h2>

<p class="text-danger">@ViewData["ConcurrencyErrorMessage"]</p>

<h3>Are you sure you want to archive this? <br />This action cannot be cancelled</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Administrator)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Administrator.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Faculty.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Faculty.Name)
        </dd>
    </dl>

    <form asp-action="Archive">
        <input type="hidden" asp-for="DepartmentID" />
        <div class="form-actions no-color btn-group">
            <input type="submit" value="Delete" class="btn btn-warning" />
            <a class="btn btn-info" asp-action="Index">Back to List</a>
        </div>

    </form>
</div>