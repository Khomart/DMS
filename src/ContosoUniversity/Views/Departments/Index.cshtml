@model IEnumerable<ContosoUniversity.Models.Entities.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>
<br />

<p>
    <a class="btn btn-success createNew" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Administrator.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faculty.Name)
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.DepartmentID">Edit</a>
                        <a class="btn btn-warning" asp-action="Archive" asp-route-id="@item.DepartmentID">Archive</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>