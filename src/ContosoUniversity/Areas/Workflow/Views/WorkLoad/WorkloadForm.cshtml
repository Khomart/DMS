                        <div class="form-group">
                            <label asp-for="FacCommittees" class="col-md-6 control-label"></label>
                            <div class="col-md-6">
                                <input type="number" min="0" asp-for="FacCommittees" class="form-control" />
                                <span asp-validation-for="FacCommittees" class="text-danger" />
