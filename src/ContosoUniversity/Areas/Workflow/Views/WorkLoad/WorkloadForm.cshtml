    <p id="results"></p>
</form>
<hr />
<div>
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
            $("input").on("change", showValues);
            function saveForm() {
                showValues;
                var str = $("form").serialize();
                if (confirm("Are we good?")) {
                    $.ajax({
                        url: "/Workflow/Workload/saveForm",
                        type: 'POST',
                        data: str,
                        success: function () {
                            //familyOverlay(false);
                            alert("data saved!");
                        },
                        error: function () {
                            alert("Unable to save form");
                            //familyOverlay(false);
                        }
                    });
                }
            }

            function showValues() {
                var str = $("form").serialize();
                $("#results").text(str);

            }
        </script>
        }
