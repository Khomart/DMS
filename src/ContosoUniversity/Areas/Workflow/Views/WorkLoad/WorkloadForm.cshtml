                            <label asp-for="ChaptInBooks" class="col-md-6 control-label"></label>
                            <div class="col-md-6">
                                <input type="number" min="0" asp-for="ChaptInBooks" class="form-control" />
                            </div>
                            <span asp-validation-for="ChaptInBooks" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PubBooksRevs" class="col-md-6 control-label"></label>
                            <div class="col-md-6">
                                <input type="number" min="0" asp-for="PubBooksRevs" class="form-control" />
                            </div>
                            <span asp-validation-for="PubBooksRevs" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Textbooks" class="col-md-6 control-label"></label>
                            <div class="col-md-6">
                                <input type="number" min="0" asp-for="Textbooks" class="form-control" />
                            </div>
                            <span asp-validation-for="Textbooks" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label asp-for="NonRefJourArtic" class="col-md-6 control-label"></label>
                            <div class="col-md-6">
                                <input type="number" min="0" asp-for="NonRefJourArtic" class="form-control" />
                            </div>
                            <span asp-validation-for="NonRefJourArtic" class="text-danger" />
