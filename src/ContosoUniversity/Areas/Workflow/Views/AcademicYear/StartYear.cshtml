@section Scripts {
    <script>
        $(".yesYearBtn, .noYearBtn").on("click", function () {
            var value = $(this).val();
            if (value == "YES") {
                $(".yesNoNewYear").hide();
                $(".setupSems").show("fast");
            }
            else {
                var url = '@Url.Action("Index", "Home", new { area = "" })';
                window.location.href = url;
            }
        });
        //$('.datesInputSemesters').datetimepicker();
        $(document).ready(setupPickersYearPage());

    </script>
}